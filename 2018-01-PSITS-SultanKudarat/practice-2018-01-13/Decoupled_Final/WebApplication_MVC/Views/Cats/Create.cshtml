@model WebApplication_MVC.Models.Cats.CreateCatViewModel
@{
    ViewData["Title"] = "Create Cat";
}

<form asp-controller="Cats" asp-action="Created" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Name" class="control-label form-label"></label>
        <input asp-for="Name" class="form-control form-input form-input-center" />
    </div>
    <div class="form-group">
        <label asp-for="Title" class="control-label form-label"></label>
        <input asp-for="Title" class="form-control form-input form-input-center" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-default btn-brand btn-brand-big">&nbsp;Create Cat&nbsp;</button>
    </div>
</form>
